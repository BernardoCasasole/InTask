<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="22dp">

        <TextView
            android:textColor="#FF014F59"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed-medium"
            android:shadowColor="#807B7B"
            android:text="Dicci qualcosa sul lavoro che vuoi proporre"
            android:textAlignment="center"
            android:textSize="20dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="40dp" />

        <TextView
            android:id="@+id/get_maps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed-light"
            android:text="@string/titolo"
            android:textColor="#FF014F59"
            android:textSize="16sp" />

        <EditText
            android:padding="10dp"
            android:id="@+id/proposal_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:background="@drawable/edit_text_background"
            android:hint="Cerco qualcuno per..."
            android:minHeight="25dp"
            android:textSize="12dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed-light"
            android:text="@string/descrizione"
            android:textColor="#FF014F59"
            android:textSize="16sp" />

        <EditText
            android:padding="10dp"
            android:id="@+id/proposal_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:background="@drawable/edit_text_background"
            android:hint="Il lavoro consisterà in..."
            android:minHeight="65dp"
            android:textSize="12dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed-light"
            android:text="@string/Price"
            android:textColor="#FF014F59"
            android:textSize="16sp" />

        <EditText
            android:padding="10dp"
            android:id="@+id/proposal_reward"
            android:layout_width="match_parent"
            android:hint="0,00 eur"
            android:textSize="14dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:background="@drawable/edit_text_background"
            />
        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/ic_baseline_check_24"
            android:fontFamily="sans-serif-condensed-light"
            android:text="@string/working_category"
            android:textColor="#FF014F59"
            android:textSize="16sp" />
        <RadioGroup
            android:id="@+id/proposal_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/ic_baseline_local_florist_24"
                android:text="@string/Giardinaggio" />
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/ic_outline_child_friendly_24"
                android:text="@string/Babysitting" />
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/ic_baseline_local_pizza_24"
                android:text="@string/Cucinare" />
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/ic_outline_local_laundry_service_24"
                android:text="@string/Pulizie" />

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/ic_baseline_menu_book_24"
                android:text="@string/Ripetizioni" />

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/ic_baseline_local_shipping_24"
                android:text="@string/Trasloco" />
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/ic_baseline_build_24"
                android:text="@string/Riparazioni" />
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/ic_dog"
                android:text="@string/Dogsitting" />
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/ic_baseline_fitness_center_24"
                android:text="@string/Personal_Training" />
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/ic_baseline_computer_24"
                android:text="@string/Supporto_informatico" />
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/ic_baseline_directions_car_24"
                android:text="@string/Trasporto" />
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/ic_baseline_local_grocery_store_24"
                android:text="@string/Spesa" />
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/ic_baseline_sports_soccer_24"
                android:text="@string/Calcetto" />
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/ic_baseline_more_horiz_24"
                android:text="@string/altro" />

        </RadioGroup>
        <Space
            android:layout_width="match_parent"
            android:layout_height="25dp"/>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed-light"
                android:text="@string/posizione"
                android:textColor="#FF014F59"
                android:textSize="16sp"
                android:layout_alignParentLeft="true" />
            <Button
                android:id="@+id/position_button"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="@string/inserisci_posizione_attuale"
                android:textColor="#FF014F59"
                android:fontFamily="sans-serif-condensed-light"
                android:paddingLeft="10dp"
                android:textSize="10sp"
                android:background="@drawable/custom_button"
                android:drawableRight="@drawable/ic_baseline_add_location_24"
                android:layout_alignParentRight="true"
                >
            </Button>
        </RelativeLayout>






        <Space
            android:layout_width="match_parent"
            android:layout_height="5dp" />
        <EditText
            android:id="@+id/proposal_location"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_background"
            android:hint="Via, n°, Città, Nazione, CAP..."
            android:minHeight="25dp"
            android:textSize="12dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="25dp" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"

                android:fontFamily="sans-serif-condensed-light"
                android:text="@string/foto_facoltativa"
                android:textColor="#FF014F59"
                android:textSize="16sp"/>

            <ImageView
                android:id="@+id/image"
                android:src="@drawable/ic_baseline_landscape_24"
                android:layout_width="130dp"
                android:layout_height="155dp"
                android:background="@drawable/edit_text_background"
                android:layout_alignParentEnd="true">

            </ImageView>
        </RelativeLayout>
        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/ic_baseline_access_time_24"
            android:fontFamily="sans-serif-condensed-light"
            android:text="@string/quando"
            android:textColor="#FF014F59"
            android:textSize="16sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <EditText
                android:padding="10dp"
                android:id="@+id/proposal_day"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:background="@drawable/edit_text_background"
                android:clickable="true"
                android:focusable="false"
                android:inputType="date"
                android:hint="Data.."
                android:minHeight="25dp"
                android:textSize="12dp" />
            <Space
                android:layout_width="match_parent"
                android:layout_height="5dp"/>
            <EditText
                android:padding="10dp"
                android:id="@+id/proposal_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:background="@drawable/edit_text_background"
                android:inputType="time"
                android:hint="Ora.."
                android:minHeight="25dp"
                android:textSize="12dp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="5dp"/>

            <EditText
                android:padding="10dp"
                android:id="@+id/proposal_duration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:background="@drawable/edit_text_background"
                android:hint="Numero di ore approssivamente necessarie..."
                android:minHeight="25dp"
                android:textSize="12dp" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />
        <CheckBox
            android:id="@+id/proposal_verified"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/verificato"
            android:layout_gravity="left"
            android:fontFamily="sans-serif-light"
            android:textSize="14sp"
            android:textColor="#FF014F59"/>
        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />
        <Button
            android:id="@+id/proposal_btn_publish"
            android:layout_width="120dp"
            android:layout_height="55dp"
            android:text="Pubblica"
            android:background="@drawable/custom_button"
            android:textStyle="bold"
            style="@style/InTaskTheme_ordinary">

        </Button>
    </LinearLayout>
</ScrollView>