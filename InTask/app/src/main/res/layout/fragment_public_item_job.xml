<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="MissingConstraints">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="left"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/user_image"
                    android:layout_width="110dp"
                    android:layout_height="135dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="35dp"
                    android:background="@drawable/edit_text_background"
                    android:src="@drawable/ic_baseline_landscape_24" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center">
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:minWidth="150dp"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/title_job_pubb"
                            android:textStyle="bold"
                            style="@style/InTaskTheme_ordinary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:text="Titolo"
                            android:drawableStart="@drawable/ic_baseline_library_books_24"/>

                        <TextView
                            android:id="@+id/publisher_job_pubb"
                            style="@style/InTaskTheme_ordinary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:text="Pubblicato Da"
                            android:drawableStart="@drawable/ic_baseline_person_24"/>

                        <TextView
                            android:id="@+id/date_hour_job_pubb"
                            style="@style/InTaskTheme_ordinary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:text="Data, Ora"
                            android:drawableStart="@drawable/ic_baseline_access_time_24"/>
                        <TextView
                            android:id="@+id/amount_job_pubb"
                            style="@style/InTaskTheme_ordinary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:text="25 eur"
                            android:drawableStart="@drawable/ic_baseline_euro_24"/>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp">
            </Space>
            <TextView
                android:id="@+id/description_job_pubb"
                style="@style/InTaskTheme_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam."
                android:padding="8dp"
                />
            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp">
            </Space>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


            <TextView
                style="@style/InTaskTheme_ordinary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Categoria:"
                android:padding="8dp"
                android:textStyle="italic"
                />  <TextView
                android:id="@+id/category_job_pubb"
                style="@style/InTaskTheme_small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Qualche categoria"
                android:padding="8dp"
                android:drawableEnd="@drawable/ic_baseline_local_florist_24"
                />
            </LinearLayout>
            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp">
            </Space>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    style="@style/InTaskTheme_ordinary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="Indirizzo"
                    android:padding="8dp"
                    android:textStyle="italic"
                    />  <TextView
                android:id="@+id/position_job_pubb"
                style="@style/InTaskTheme_small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="0, Via dei Matti, Roma, 02300, IT"
                android:padding="8dp"
                />
            </LinearLayout>
            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp">
            </Space>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    style="@style/InTaskTheme_ordinary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="Ore necessarie stimate"
                    android:padding="8dp"
                    android:textStyle="italic"
                    />  <TextView
                android:id="@+id/hours_number_job_pubb"
                style="@style/InTaskTheme_small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="4"
                android:padding="8dp"
                />
            </LinearLayout>
            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp">
            </Space>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    style="@style/InTaskTheme_ordinary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="Accetta solo se verificato:"
                    android:padding="8dp"
                    android:textStyle="italic"
                    android:drawableEnd="@drawable/ic_baseline_check_35"
                    />
            </LinearLayout>

            <Button
                android:id="@+id/button_contact"
                style="@style/InTaskTheme_ordinary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="20dp"
                android:background="@drawable/custom_button"
                android:padding="1dp"
                android:text="@string/contatta_button">

            </Button>
        </LinearLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>